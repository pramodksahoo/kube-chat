# KubeChat Web Frontend Environment Configuration
# Copy this file to .env and configure values for your deployment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application identification
VITE_APP_NAME=KubeChat
VITE_APP_VERSION=dev
VITE_APP_ENVIRONMENT=development

# Application URLs
VITE_APP_BASE_URL=http://localhost:5173
VITE_APP_API_URL=http://localhost:8080
VITE_APP_WS_URL=ws://localhost:8080/ws

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API endpoints
VITE_API_BASE_URL=http://api-gateway:8080/api/v1
VITE_API_TIMEOUT=30000

# WebSocket configuration
VITE_WS_BASE_URL=ws://api-gateway:8080/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Authentication settings
VITE_AUTH_ENABLED=true
VITE_AUTH_TYPE=jwt
VITE_AUTH_TOKEN_KEY=kubechat_token
VITE_AUTH_REFRESH_TOKEN_KEY=kubechat_refresh_token

# Session management
VITE_SESSION_TIMEOUT=3600000
VITE_SESSION_REFRESH_THRESHOLD=300000
VITE_REMEMBER_ME_ENABLED=true

# OAuth/OIDC configuration (if enabled)
VITE_OIDC_ENABLED=false
# VITE_OIDC_ISSUER=https://auth.company.com
# VITE_OIDC_CLIENT_ID=kubechat-web
# VITE_OIDC_REDIRECT_URI=http://localhost:5173/callback

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core features
VITE_FEATURE_CHAT=true
VITE_FEATURE_COMMAND_EXECUTION=true
VITE_FEATURE_AUDIT_VIEWER=true
VITE_FEATURE_KUBERNETES_DASHBOARD=true

# Advanced features
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_COMMAND_HISTORY=true
VITE_FEATURE_USER_PREFERENCES=true
VITE_FEATURE_DARK_MODE=true

# Beta/Experimental features
VITE_FEATURE_VOICE_COMMANDS=false
VITE_FEATURE_AI_SUGGESTIONS=true
VITE_FEATURE_COLLABORATION=false

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Theme configuration
VITE_DEFAULT_THEME=light
VITE_THEME_PERSISTENCE=true
VITE_CUSTOM_BRANDING=false

# Layout settings
VITE_SIDEBAR_COLLAPSED_DEFAULT=false
VITE_HEADER_STICKY=true
VITE_FOOTER_ENABLED=true

# Accessibility
VITE_A11Y_ENABLED=true
VITE_HIGH_CONTRAST_MODE=false
VITE_SCREEN_READER_SUPPORT=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode settings
VITE_DEV_MODE=true
VITE_DEBUG_MODE=true
VITE_VERBOSE_LOGGING=false

# Hot Module Replacement
VITE_HMR_ENABLED=true
VITE_HMR_HOST=localhost
VITE_HMR_PORT=5173

# Source maps
VITE_SOURCE_MAPS=true
VITE_CSS_SOURCE_MAPS=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Production build settings
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_GZIP=true

# Asset optimization
VITE_OPTIMIZE_IMAGES=true
VITE_OPTIMIZE_FONTS=true
VITE_PRELOAD_ASSETS=true

# Bundle splitting
VITE_CODE_SPLITTING=true
VITE_VENDOR_CHUNK=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Performance settings
VITE_LAZY_LOADING=true
VITE_VIRTUAL_SCROLLING=true
VITE_DEBOUNCE_SEARCH=300

# Caching
VITE_CACHE_API_RESPONSES=true
VITE_CACHE_DURATION=300000
VITE_SERVICE_WORKER_ENABLED=false

# Resource loading
VITE_PRELOAD_CRITICAL_ASSETS=true
VITE_ASYNC_COMPONENTS=true

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Error tracking
VITE_ERROR_TRACKING=false
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_SENTRY_ENVIRONMENT=development

# Analytics
VITE_ANALYTICS_ENABLED=false
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id
# VITE_ANALYTICS_COOKIE_CONSENT=true

# Performance monitoring
VITE_PERFORMANCE_MONITORING=false
VITE_WEB_VITALS_TRACKING=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_ONLY=true

# XSS Protection
VITE_XSS_PROTECTION=true
VITE_CONTENT_TYPE_NOSNIFF=true
VITE_FRAME_OPTIONS=SAMEORIGIN

# HTTPS enforcement
VITE_FORCE_HTTPS=false
VITE_HSTS_ENABLED=false

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# i18n configuration
VITE_I18N_ENABLED=false
VITE_DEFAULT_LOCALE=en
VITE_FALLBACK_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de

# RTL support
VITE_RTL_SUPPORT=false
VITE_AUTO_DETECT_DIRECTION=false

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket settings
VITE_WS_AUTO_CONNECT=true
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5
VITE_WS_BINARY_TYPE=arraybuffer

# Real-time features
VITE_REAL_TIME_NOTIFICATIONS=true
VITE_REAL_TIME_COMMAND_STATUS=true
VITE_REAL_TIME_AUDIT_EVENTS=false

# =============================================================================
# CHAT INTERFACE CONFIGURATION
# =============================================================================

# Chat settings
VITE_CHAT_MAX_MESSAGES=1000
VITE_CHAT_MESSAGE_MAX_LENGTH=4000
VITE_CHAT_TYPING_INDICATOR=true
VITE_CHAT_EMOJI_ENABLED=true

# Message history
VITE_CHAT_HISTORY_ENABLED=true
VITE_CHAT_HISTORY_PERSIST=true
VITE_CHAT_EXPORT_ENABLED=true

# Auto-complete and suggestions
VITE_COMMAND_AUTOCOMPLETE=true
VITE_COMMAND_SUGGESTIONS=true
VITE_SMART_SUGGESTIONS=true

# =============================================================================
# KUBERNETES DASHBOARD CONFIGURATION
# =============================================================================

# Dashboard settings
VITE_K8S_DASHBOARD_ENABLED=true
VITE_K8S_REFRESH_INTERVAL=30000
VITE_K8S_AUTO_REFRESH=true

# Resource display
VITE_K8S_SHOW_SYSTEM_NAMESPACES=false
VITE_K8S_RESOURCE_LIMITS=100
VITE_K8S_METRICS_ENABLED=true

# =============================================================================
# AUDIT VIEWER CONFIGURATION
# =============================================================================

# Audit viewer settings
VITE_AUDIT_VIEWER_ENABLED=true
VITE_AUDIT_PAGE_SIZE=50
VITE_AUDIT_MAX_RESULTS=1000
VITE_AUDIT_EXPORT_ENABLED=true

# Audit filtering
VITE_AUDIT_ADVANCED_FILTERS=true
VITE_AUDIT_SEARCH_ENABLED=true
VITE_AUDIT_DATE_RANGE_PICKER=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Notification settings
VITE_NOTIFICATIONS_ENABLED=true
VITE_NOTIFICATION_DURATION=5000
VITE_NOTIFICATION_POSITION=top-right

# Notification types
VITE_TOAST_NOTIFICATIONS=true
VITE_BROWSER_NOTIFICATIONS=false
VITE_SOUND_NOTIFICATIONS=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Development utilities
VITE_REDUX_DEVTOOLS=true
VITE_REACT_DEVTOOLS=true
VITE_STORYBOOK_ENABLED=false

# Testing
VITE_TESTING_ENABLED=true
VITE_E2E_TESTING=false
VITE_MOCK_API=false

# =============================================================================
# PROGRESSIVE WEB APP (PWA)
# =============================================================================

# PWA configuration
VITE_PWA_ENABLED=false
VITE_PWA_OFFLINE_SUPPORT=false
VITE_PWA_CACHE_STRATEGY=networkFirst

# App manifest
VITE_PWA_NAME=KubeChat
VITE_PWA_SHORT_NAME=KubeChat
VITE_PWA_DESCRIPTION=Kubernetes Natural Language Interface

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Third-party services
VITE_MAPS_API_KEY=your_maps_api_key
VITE_CHARTS_PROVIDER=recharts

# Documentation links
VITE_DOCS_URL=https://docs.kubechat.io
VITE_HELP_URL=https://help.kubechat.io
VITE_SUPPORT_URL=https://support.kubechat.io

# =============================================================================
# COMPLIANCE AND PRIVACY
# =============================================================================

# Privacy settings
VITE_PRIVACY_MODE=false
VITE_TELEMETRY_ENABLED=false
VITE_COOKIE_CONSENT=false

# Compliance flags
VITE_GDPR_COMPLIANCE=false
VITE_CCPA_COMPLIANCE=false
VITE_AUDIT_LOGGING_UI=true

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Frontend resource limits
VITE_MAX_FILE_UPLOAD_SIZE=10485760
VITE_MAX_CONCURRENT_REQUESTS=10
VITE_REQUEST_TIMEOUT=30000

# Memory management
VITE_VIRTUAL_LIST_BUFFER=10
VITE_IMAGE_LAZY_LOADING=true
VITE_COMPONENT_LAZY_LOADING=true